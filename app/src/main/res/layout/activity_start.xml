<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/toolbar"
                android:id="@+id/includeToolbar" />
            <com.melnykov.fab.ObservableScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/phoneNumberTextView"
                            android:text="@string/phone_number"
                            android:textSize="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/phoneNumberEditText"
                            android:hint="@string/default_phone_number"
                            android:maxLength="15"
                            android:layout_below="@id/phoneNumberTextView"
                            android:layout_alignEnd="@id/phoneNumberTextView"
                            android:layout_alignRight="@id/phoneNumberTextView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:inputType="phone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/messageTextView"
                            android:text="@string/message"
                            android:textSize="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/messageEditText"
                            android:hint="@string/default_message"
                            android:maxLength="160"
                            android:layout_below="@id/messageTextView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:inputType="text"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberToSendTextView"
                            android:text="@string/number_to_send"
                            android:textSize="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberToSendEditText"
                            android:hint="@string/default_number_of_texts"
                            android:maxLength="4"
                            android:layout_below="@id/numberToSendTextView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:inputType="number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/how_often"
                            android:id="@+id/textPhoneNumberPreviewHeader"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="30dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/editTextTimeValue"
                            android:layout_below="@+id/textEnterNumber"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignRight="@+id/textEnterNumber"
                            android:layout_alignEnd="@+id/textEnterNumber"
                            android:hint="@string/number_of_seconds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enter_one_number"
                            android:id="@+id/textEnterNumber"
                            android:textSize="20dp"
                            android:layout_below="@+id/textPhoneNumberPreviewHeader"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/range_of_time"
                            android:id="@+id/textEnterRange"
                            android:layout_below="@+id/editTextTimeValue"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/textEnterRange">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textEnterRange"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:id="@+id/linearLayout">

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/editTextRangeLower"
                                    android:layout_below="@+id/textEnterRange"
                                    android:layout_toRightOf="@+id/editTextRangeUpper"
                                    android:hint="@string/number_of_seconds"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="26dp"
                                    android:text="-"
                                    android:id="@+id/textRangeDash"
                                    android:textSize="20dp" />

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/editTextRangeUpper"
                                    android:layout_below="@+id/textEnterRange"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignRight="@+id/textEnterNumber"
                                    android:layout_alignEnd="@+id/textEnterNumber"
                                    android:hint="@string/number_of_seconds"
                                    android:layout_weight="1" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/enableRange"
                                    android:checked="false"
                                    android:onClick="range" />
                            </LinearLayout>
                        </LinearLayout>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/enableOne"
                            android:checked="false"
                            android:layout_alignBottom="@+id/editTextTimeValue"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:onClick="one" />

                    </RelativeLayout>
                </LinearLayout>
            </com.melnykov.fab.ObservableScrollView>
            </LinearLayout>
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_menu_send"
            fab:fab_colorNormal="@color/primary"
            fab:fab_colorPressed="@color/primary_pressed"
            fab:fab_colorRipple="@color/ripple"
            fab:fab_type="normal"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        <!-- The navigation drawer -->
        <ListView android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#111"/>
</android.support.v4.widget.DrawerLayout>

